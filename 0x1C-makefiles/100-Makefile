define RM
	rm -f
endef
define CFLAGS
	-Wall -Werror -Wextra -pedantic
endef
CC = gcc
SRC = school.c main.c
OBJ = $(SRC:.c=.o)
NAME = school

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)
$^: m.h
.PHONY: clean oclean fclean re all

clean:
	$(RM) *~ *# $(NAME)
oclean:
	$(RM) $(OBJ)
fclean: clean oclean
re: oclean all
